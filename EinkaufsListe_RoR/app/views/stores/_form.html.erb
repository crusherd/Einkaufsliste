<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.select( :address_id, Address.all.collect{|a| [(a.street + ", " + a.zipCode + ", " + a.city + ", " + a.country), a.id]}, {:include_blank => "Choose an Address"})%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

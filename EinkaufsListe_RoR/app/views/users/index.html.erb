<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Shoppinglist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <% if !user.shoppingList.blank? %>
        <td><%= link_to "List", :action=>"index", :controller=>"shopping_lists" %></td>
    <% else %>
        <td> </td>
    <% end %>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
<br/>
<% if @user.nil? && @user.blank?%>
    <%= link_to "Create new Shopping List", new_shopping_list_path %>
<% end %>

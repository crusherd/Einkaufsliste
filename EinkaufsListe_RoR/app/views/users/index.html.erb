<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Shoppinglist</th>
    <th>Articles</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <% if user.shoppingList.exists? %>
        <td><%= link_to "List", :action=>"index", :controller=>"shopping_lists" %></td>
        <% if Article.count > 0 %>
            <td><%= link_to "Articles", :action=>"index", :controller=>"articles" %></td>
        <% else %>
            <td></td>
        <% end %>
    <% else %>
        <td></td>
        <td></td>
    <% end %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
<br/>
<% if !@users.blank? %>
    <%= link_to "Create new Shopping List", new_shopping_list_path %>
<% end %>

<%= form_tag :action => 'add' do %>
	<table class="myTable">
	 	<tr id="head">
	 		<th><%= label_tag 'amount', 'Amount'%></th>
	 		<th><%= label_tag 'article', 'Article' %></th>
	 		<th></th>
	 	</tr>
	 	<tr id="content">
	 		<td><%= text_field_tag :amount, nil, :size => 1%></td>
	 		<td>
	 			<%= select_tag :article_id, 
	 				options_for_select( Article.order("name ASC, price ASC").all.map { |a| [ a.name + ", " + number_to_currency(a.price, :unit => "â‚¬", :separator => ",") , a.id] }),
	 				:prompt => "Choose an Article"
				%>
	 		</td>
	 		<td><%= submit_tag "Add to List" %></td>
	 	</tr>
 	</table>
<% end %>


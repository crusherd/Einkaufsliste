<% if @current_shoppinglist.nil? %>
<h1>Listing all shoppinglists</h1>
<% else %>
<h1> Listing articles of "<%= @current_shoppinglist.name %>"</h1>
<% end %>

<% if @listings.empty? %>
  <br />
  <% if @current_shoppinglist.nil? %>
  <p style="font-weight: bolder; color: red;">There are no articles created yet!!</p>
  <% else %>
  <p style="font-weight: bolder; color: red;">The shoppinglist "<%= @current_shoppinglist.name %>" has no articles yet!!</p>
  <% end %>
<% else %>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.price %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% end %>

<br />

<%= link_to 'New Article', new_article_path %>
<%= 
if @current_shoppinglist.nil?
	link_to "Show Users", users_path
else
	link_to "Back to "+@current_shoppinglist.name, shoppinglists_path
end
%>